#include <stdio.h>

void Prime(int n) {
	int i, counter = 0;
	for (i = 2; i < n/2; i++) {
		if (n % i == 0) {
			counter = counter + 1;
		}
	}
	if (counter != 0) {
		printf("%d isn't a prime number.", n);
	}
	else {
		printf("%d is a prime number.", n);
	}
}

int main() {
	int num = 0;
	printf("Please print a number: ");
	scanf("%d", &num);
	if (num <= 0) {
		printf("Error");
	}
	else {
		Prime(num);
	}
}
